




<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%= check_box("tag", tag.id, {checked: @task.completed }) %>
<p><%= @task.completed %></p>
<%= link_to "Edit",
  edit_task_path(@task)
%>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
